<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingBottom="12dp"
            android:paddingLeft="@dimen/parent_spacing_left"
            android:paddingTop="24dp"
            android:text="@string/logo"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingLeft="@dimen/parent_spacing_left"
            android:text="@string/logo2"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            android:background="@color/cardBackground">

            <TextView
                android:theme="@style/WhiteQuestion"
                android:layout_margin="@dimen/text_card_margin"
                android:id="@+id/question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quest1" />

            <RadioGroup
                android:id="@+id/radio_group1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question1"
                android:layout_margin="@dimen/text_card_margin"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/q1anwser1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:text="1-2"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/q1anwser2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:text="3-5"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/q1anwser3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:text="6-12"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/q1anwser4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:text="13-20"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RadioGroup>

            <TextView
                android:theme="@style/OrangeExplanation"
                android:id="@+id/explanation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group1"
                android:layout_marginLeft="@dimen/text_card_margin"
                android:text="@string/exp1"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            android:background="@color/cardBackground">

            <TextView
                android:theme="@style/WhiteQuestion"
                android:layout_margin="@dimen/text_card_margin"
                android:id="@+id/question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quest2" />

            <CheckBox
                android:id="@+id/q2anwser1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question2"
                android:layout_marginLeft="@dimen/text_card_margin"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/white"
                android:text="@string/box1"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/q2anwser2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/q2anwser1"
                android:layout_marginLeft="@dimen/text_card_margin"
                android:buttonTint="@color/white"
                android:text="@string/box2"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/q2anwser3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/q2anwser2"
                android:layout_marginLeft="@dimen/text_card_margin"
                android:buttonTint="@color/white"
                android:text="@string/box3"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/q2anwser4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/q2anwser3"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/text_card_margin"
                android:buttonTint="@color/white"
                android:text="@string/box4"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:theme="@style/OrangeExplanation"
                android:id="@+id/explanation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_card_margin"
                android:layout_below="@id/q2anwser4"
                android:text="@string/exp2"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            android:background="@color/cardBackground">

            <TextView
                android:theme="@style/WhiteQuestion"
                android:layout_margin="@dimen/text_card_margin"
                android:id="@+id/question3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quest3" />

            <RadioGroup
                android:id="@+id/radio_group2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question3"
                android:layout_margin="@dimen/text_card_margin"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/q3anwser1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:text="12 hr"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/q3anwser2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:text="24 hr"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/q3anwser3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:text="48 hr"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/q3anwser4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:text="72 hr"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RadioGroup>

            <TextView
                android:theme="@style/OrangeExplanation"
                android:id="@+id/explanation3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_card_margin"
                android:layout_below="@id/radio_group2"
                android:text="@string/exp3"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            android:background="@color/cardBackground">

            <TextView
                android:theme="@style/WhiteQuestion"
                android:layout_margin="@dimen/text_card_margin"
                android:id="@+id/question4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quest4" />

            <EditText
                android:id="@+id/q4anwser1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question4"
                android:layout_margin="@dimen/text_card_margin"
                android:inputType="textMultiLine"
                android:textColor="@color/white"
                android:theme="@style/MyEditTextStyle" />

            <TextView
                android:theme="@style/OrangeExplanation"
                android:id="@+id/explanation4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_card_margin"
                android:layout_below="@id/q4anwser1"
                android:layout_marginTop="8dp"
                android:text="@string/exp4"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            android:background="@color/cardBackground">

            <TextView
                android:theme="@style/WhiteQuestion"
                android:layout_margin="@dimen/text_card_margin"
                android:id="@+id/question5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quest5" />

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question5"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/text_card_margin"
                android:layout_marginTop="16dp"
                android:theme="@style/RatingBar" />

            <TextView
                android:theme="@style/OrangeExplanation"
                android:id="@+id/explanation5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rating"
                android:layout_marginLeft="@dimen/text_card_margin"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-bold"
                android:text="@string/exp5"
                android:textSize="32sp"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/checkId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                android:fontFamily="sans-serif"
                android:onClick="checkAnwsers"
                android:text="Check anwsers"
                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/resetId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                android:fontFamily="sans-serif"
                android:onClick="reset"
                android:text="Reset"
                android:textColor="@color/white"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
